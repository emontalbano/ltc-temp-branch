<?xml version='1.0' encoding='utf-8'?>
<widget id="com.incapsulate.ltcprovider" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LTC Provider</name>
    <description />
    <author email="eddie.montalbano@gmail.com">Ed Montalbano</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="resources/splash.android.png" />
        <icon density="ldpi" src="resources/android/icon/jh-icon-ldpi.png" />
        <icon density="mdpi" src="resources/android/icon/jh-icon-mdpi.png" />
        <icon density="hdpi" src="resources/android/icon/jh-icon-hdpi.png" />
        <icon density="xhdpi" src="resources/android/icon/jh-icon-xhdpi.png" />
        <icon density="xxhdpi" src="resources/android/icon/jh-icon-xxhdpi.png" />
        <icon density="xxxhdpi" src="resources/android/icon/jh-icon-xxxhdpi.png" />
        <custom-config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        </custom-config-file>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="resources/splash.640x960.png" />
    </platform>
    <preference name="orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <plugin name="cordova-custom-config" spec="^5.0.2" />
    <plugin name="cordova-plugin-datepicker" spec="^0.9.3" />
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <plugin name="cordova-plugin-app-events" spec="^1.2.1" />
    <plugin name="cordova-plugin-fingerprint-aio" spec="^1.3.4" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="^2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-sqlcipher-adapter" spec="^0.1.12-rc2" />
    <plugin name="cordova.plugins.diagnostic" spec="^4.0.6" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="^0.8.5" />
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="ios" spec="4.5.4" />
    <plugin name="cordova-plugin-add-swift-support" spec="https://github.com/akofman/cordova-plugin-add-swift-support.git" />
</widget>
